@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <style>
        .ip {
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </style>
}

<script type="text/javascript">
    $(document).ready(function () {
        var svname="";
        listServer();
        loadData();
        Loadchart();
        listData();
        
        $('#btnloadchart').click(function () {
            $("#table  td").remove();
            $("#text").text("Table Resource " + $('#cbxServerName').val());
            $("#text-chart").text("Monitering " + $('#cbxServerName').val());
            Loadchart();
            listData();
        })
        $('#btnsendmail').click(function () {
            Sendmail();
        })
        function listData() {
            $.ajax({
                url: "https://localhost:44387/api/ServerInfor/servername/" + $('#cbxServerName').val(),
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $.each(data, function (index, val) {
                        $('.table').append('<tr>' +
                            '<td>' + val.id + '</td>' +
                            '<td>' + val.name + '</td>' +
                            '<td>' + val.cpu + "%" + '</td>' +
                            '<td>' + val.ram + "%" + '</td>' +
                            '<td>' + val.d + "%" + '</td>' +
                            '<td>' + val.time +  '</td>' +
                            '<td>' + val.ip + '</td>' +
                            '<td>' + val.region + '</td>' +
                            '</tr>');
                    });
                }
            });
        }
        function loadData() {
            $.ajax({
                url: "https://localhost:44387/api/ServerInfor/servername/" + "SV1",
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $.each(data, function (index, val) {
                        $('.table').append('<tr>' +
                            '<td>' + val.id + '</td>' +
                            '<td>' + val.name + '</td>' +
                            '<td>' + val.cpu + "%" + '</td>' +
                            '<td>' + val.ram + "%" + '</td>' +
                            '<td>' + val.d + "%" + '</td>' +
                            '<td>' + val.time + '</td>' +
                            '<td>' + val.ip + '</td>' +
                            '<td>' + val.region + '</td>' +

                            '</tr>');
                    });
                }
            });

            $.ajax({
                url: "https://localhost:44387/api/ServerInfor/servername/" + "SV1",
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    chart.setData(data);
                }
            });
        }
        function listServer() {
            $.ajax({
                url: "https://localhost:44387/api/ServerInfor/servername",
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $.each(data, function (index, val) {
                        $('#cbxServerName').append('<option value="' + val + '">' + val + '</option>');
                        svname = val;
                    });
                }
            });
        }


        function Loadchart() {
            $.ajax({
                url: "https://localhost:44387/api/ServerInfor/servername/" + $('#cbxServerName').val(),
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    chart.setData(data);
                }
            });
        }
        function Sendmail() {
            $.ajax({
                url: "https://localhost:44387/api/ServerInfor/sendmail/" + $('#cbxServerName').val(),
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $("#successMessage").show();
                }
            });
        }


    });
</script>

<div class="ip">
    <h3 id="text-chart" class="text-center">Monitering SV1</h3>
</div>
<div id="myfirstchart" style="height: 250px;"></div>


<script>

    var chart = new Morris.Line({
        // ID of the element in which to draw the chart.
        element: 'myfirstchart',
        // Chart data records -- each entry in this array corresponds to a point on
        // the chart.
        //data: [
        //    { year: '2008', value: 20 },
        //    { year: '2009', value: 10 },
        //    { year: '2010', value: 5 },
        //    { year: '2011', value: 5 },
        //    { year: '2012', value: 20 }
        //],
        // The name of the data record attribute that contains x-values.
        xkey: 'time',
        // A list of names of data record attributes that contain y-values.
        ykeys: ['cpu', 'ram', 'd'],
        // Labels for the ykeys -- will be displayed when you hover over the
        // chart.
        labels: ['CPU', 'RAM', 'DISK']
    });
</script>
<div class="ip">


    <b>Server</b>
    <select id="cbxServerName"></select>
    <button id="btnloadchart" type="button" class="btn btn-outline-primary">Load Chart</button>
    <h3 id="text" class="text-center">Table Resource SV1</h3>
</div>
<div class="text-center">
    <div>
        <table id="table" class="table">
            <tr>
                <th>ID</th>
                <th>Server</th>
                <th>CPU</th>
                <th>RAM</th>
                <th>Disk</th>
                <th>Time</th>
                <th>IP</th>
                <th>Region</th>
            </tr>
        </table>
    </div>

</div>



